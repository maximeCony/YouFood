<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}YouFood{% endblock %}</title>

        <link href="{{ asset('bundles/bootstrap/css/bootstrap.css') }}" rel="stylesheet" type="text/css" />
        <style>
                #content{
                    margin-top: 50px;
                    padding: 30px;  
                }

                .majorTr{
                    background-color: #F9F9F9;
                }

                .titleTr{
                    background-color: #F5F5F5
                }
                
                .btn {
                    margin: 3px;
                }
               
            </style>

            <script src="{{ asset('js/jquery-1.7.2.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/bootstrap/js/bootstrap.js') }}" type="text/javascript"></script>



        </head>
        <body>

            <div id="sidebar">
            {% block sidebar %}
                    <div class="navbar navbar-fixed-top">
                        <div class="navbar-inner">
                            <div class="container">
                                <a data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </a>
                                <a href="{{ path('YouFoodRestaurantBundle_homepage') }}" class="brand">YouFood</a>
                                <div class="nav-collapse">
                                    
                                    {% if app.user.rolesAsArray is defined  %}

                                    <ul class="nav">
                                        
                                        {% if 'ROLE_SUPER_ADMIN' in app.user.rolesAsArray %}
                                            <li><a href="{{ path('Restaurant_list') }}">Restaurants</a></li>
                                            <li><a href="{{ path('Card_list') }}">Cards</a></li>
                                            <li><a href="{{ path('Plat_list') }}">Plats</a></li>
                                            <li><a href="{{ path('User_list') }}">Users</a></li>
                                        {% endif %}
                                            
                                    </ul>
                                    {% endif %}
                                    <div class="nav-collapse pull-right">
                                        <ul class="nav" id="loginHeader">
                                            {% if app.user.username is defined  %}
                                            <li style="margin-top: 10px;">Hello <b style="color: #0088CC;">{{ app.user.username }}</b> !</li>
                                            <li><a href="{{ path('login_out') }}">Logout</a></li>
                                            {% else %}
                                            <li><a href="{{ path('login') }}">Log in</a></li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            {% endblock %}
                </div>

                <div id="content">
                        {% block body %}{% endblock %}
                    </div>
                </body>
            </html>